<h3>L02_ChildNotifyParent_Parent_1</h3>
<div>
    <label for="tb_Name">用户名：</label>
    <input id="tb_Name" type="text" @bind-value="Name" @bind-value:event="oninput" />
</div>
<div>
    <label for="tb_Name">邮箱：</label>
    <input id="tb_Name" type="email" @bind-value="Email" @bind-value:event="oninput" />
</div>
@code {
    private string _name;
    private string _email;

    public string Name
    {
        get => _name;
        set
        {
            _name = value;
            Parent?.OnPropertyChanged(("Name", _name));
        }
    }

    public string Email
    {
        get => _email;
        set
        {
            _email = value;
            Parent?.OnPropertyChanged(("Email", _email));
        }
    }

    [Parameter]
    [CascadingParameter]
    public L02_ChildNotifyParent Parent { get; set; }
}
